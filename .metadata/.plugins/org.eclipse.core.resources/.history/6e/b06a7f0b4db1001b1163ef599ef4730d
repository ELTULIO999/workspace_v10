//**************************************************************************************************************
// Librerías
//**************************************************************************************************************
#include <stdint.h>
#include <stdbool.h>
#include "inc/tm4c123gh6pm.h"
#include "inc/hw_memmap.h"
#include "inc/hw_types.h"
#include "inc/hw_ints.h"
#include "driverlib/sysctl.h"
#include "driverlib/interrupt.h"
#include "driverlib/gpio.h"
#include "driverlib/timer.h"

//**************************************************************************************************************
// Variables Globales
//**************************************************************************************************************


//**************************************************************************************************************
// Prototipos de Funciones
//**************************************************************************************************************

int main(void)
{
    SysCtlClockSet( SYSCTL_OSC_MAIN | SYSCTL_XTAL_16MHZ | SYSCTL_USE_PLL | SYSCTL_SYSDIV_5);

	SysCtlPeripheralEnable (SYSCTL_PERIPH_GPIOF);
	    SysCtlPeripheralEnable (SYSCTL_PERIPH_TIMER0);

	    while(!SysCtlPeripheraReady(SYSCTL_PERIPH_GPIOF));
	    while(!SysCtlPeripheraReady(SYSCTL_PERIPH_TIMER0));

	    GPIOPinTypeGPIOOutput (GPIO_PORTF_BASE, GPIO_PIN_1|GPIO_PIN_2|GPIO_PIN_3);
	    GPIOPadConfigSet (GPIO_PORTF_BASE, GPIO_PIN_)




}
